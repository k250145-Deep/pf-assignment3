#include<stdio.h>
double calculateRepayment(float loan , float interest, int years, int currentyear){
	if(loan<=0 || years==0){
		printf("Loan full paid or no years remaining");
		return 0;
	}       											
	float installment = 100000/3.0;                       
	loan = loan + (loan * interest);                     
	float payment = installment;						
	loan -= payment;
	if (loan<0) loan = 0;
	printf("Years %d: Remaining loan = %.2f\n",currentyear,loan);
	return payment + calculateRepayment(loan , interest, years-1,currentyear+1);
}
int main(){
	float loan = 100000;
	float interestrate = 0.05;
	int years = 3;   
	printf("The Repayment Schedule is: \n");
	float total = calculateRepayment(loan,interestrate,years,1);
	printf("\nThe Total Repayment in 3 Years = %.2f\n",total);
	return 0;
}
